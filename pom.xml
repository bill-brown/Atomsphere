  <modelVersion>4.0.0</modelVersion>
  <groupId>com.colorful</groupId>
  <artifactId>atomsphere</artifactId>
  <packaging>war</packaging>
  <version>1.0.0</version>
  <description>Atom Feed Manager</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>version</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <ant inheritRefs="true" antfile="src/main/resources/ant.tasks.xml">
                  <target name="incrementBuildNumber"></target>
                </ant>
              </tasks>
            </configuration>
          </execution>
         <!-- <execution>
            <id>tag</id>
