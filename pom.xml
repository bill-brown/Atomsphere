<?xml version="1.0" encoding="utf-8"?>
<!-- Change History 
	2007-02-23 wbrown - updating version from 1.0.1.1 to 1.0.2.0 for sorting, tag display and web lib feature improvements.
	2007-05-02 wbrown - updated version of sjsxp.
	2007-06-20 wbrown - updated version of sjsxp.
						updated version to 1.0.3.0 for additional sorting.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.colorful</groupId>
	<artifactId>atomsphere</artifactId>
	<packaging>jar</packaging>
	<name>Atomsphere</name>
	<url>http://www.colorfulsoftware.com/projects/atomsphere/</url>
	<version>1.0.3.0-SNAPSHOT</version>
	<description>Atomsphere - An Atom 1.0 Feed Library</description>
	<scm>
		<connection>scm:svn:https://bill@gyenyame/repo/atomsphere/trunk</connection>
		<url>scm:svn:https://bill@gyenyame/repo/atomsphere/trunk</url>
		<developerConnection>scm:svn:https://bill@gyenyame/repo/atomsphere/trunk</developerConnection>
	</scm>
	<ciManagement>
		<system>continuum</system>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>wbrown@colorfulsoftware.com</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>
	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</releases>
			<id>com.colorful</id>
			<name>Inhouse Repository</name>
			<url>file:///home/bill/.m2/repository</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</releases>
			<id>com.colorful</id>
			<name>Inhouse Repository</name>
			<url>file:///home/bill/.m2/repository</url>
		</pluginRepository>
	</pluginRepositories>
	<distributionManagement>
		<repository>
			<uniqueVersion>true</uniqueVersion>
			<id>com.colorful</id>
			<name>Inhouse Repository</name>
			<url>file:///home/bill/.m2/repository</url>
			<layout>default</layout>
		</repository>
	</distributionManagement>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
    	<plugins>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-checkstyle-plugin</artifactId>
	      </plugin>
    	</plugins>
  	</reporting>
	<dependencies>
		<dependency>
			<groupId>javax.xml</groupId>
			<artifactId>jsr173</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.sun.xml</groupId>
			<artifactId>sjsxp</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>javanet.staxutils</groupId>
			<artifactId>stax-utils</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
</project>